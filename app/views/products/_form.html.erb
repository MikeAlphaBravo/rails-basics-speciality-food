<%= render "layouts/errors", :object => @product %>

<div class="row">
  <div class="col-6">
    <%= form_for @product do |f| %>
      <div class="form-group row">
        <%= f.label :name, :class => "col-sm-3 col-form-label" %>
        <%= f.text_field :name, :class => "form-control col-sm-9", :placeholder => "Product Name" %>
      </div>
      <div class="form-group row">
        <%= f.label :cost, :class => "col-sm-3 col-form-label" %>
        <%= f.text_field :cost, :class => "form-control col-sm-9", :placeholder => "Cost" %>
      </div>
      <div class="form-group row">
        <%= f.label :origin, :class => "col-sm-3 col-form-label" %>
        <%= f.text_field :origin, :class => "form-control col-sm-9", :placeholder => "Origin" %>
      </div>
      <%= f.submit :class => "btn btn-success" %>
    <% end %>
  </div>
</div>
