<h1><%= @product.name %></h1>
<h3><%= @product.cost %></h3>
<h4>A product of <%= @product.origin %></h4>
<%= link_to "Edit Product", edit_product_path, :class => "btn btn-warning mb-1" %>
<%= link_to "Delete Product", product_path(@product),
    :class => "btn btn-danger mb-1",
    :data => {:confirm => "Are you sure?",
                :method => "delete"}%>

<% if @product.reviews.any? %>
  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        <%= review.author %>
        <%= review.content %>
        <%= review.rating %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no reviews yet!</p>
<% end %>

<p><%= link_to "Add a review", new_product_review_path(@product) %></p>
